<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>
<div class="users-cards">

    <section>
      <div class="users2">
        <div class="row">

      <% @users.each do |user| %>
          <div class="col-sm-6 col-xs-12 full-width">
            <div class="media">


              <div class="media-body bio">
                <h1 class="name"><%= user.firstname %><%= user.lastname %></h1>
                <p>
                  <span class="heading">Address <%= user.street %><%= user.number%></span> <%= user.city %><%= user.zip_code %>
                </p>
                <p>
                  <span class="heading">Mail</span> <%= user.email %>
                </p>
              </div>

              </div>
            </div>
          </div> <!--/col-->
    <% end %>


        </div>
      </div>
    </section>

  </div>
</div>
